<div class="d-flex flex-row justify-content-between">
    <div class="d-flex flex-column flex-grow-1 me-2">
        <label>Выбранные игроки</label>
        <select class="form-select" size="8">
            @foreach (int id in SelectedPlayers)
            {
                <option value="id" @onclick="() => RemovePlayer(id)" disabled="@IsLocked(id)">@PlayerNicknamesService.GetFullNicknameFromCache(id)</option>
            }
        </select>
    </div>
    <div class="d-flex flex-column flex-grow-1">
        <label>Все игроки</label>
        <select class="form-select" size="8">
            @foreach (int id in AllPlayers)
            {
                <option value="id" @onclick="() => AddPlayer(id)" disabled="@(IsLocked(id) || SelectedPlayers.Count >= MaxSelectedPlayers)">@PlayerNicknamesService.GetFullNicknameFromCache(id)</option>
            }
        </select>
    </div>
</div>