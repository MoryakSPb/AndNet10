@using AndNet.Manager.Shared.Models.Documentation
@using AndNet.Manager.Shared.Models.Documentation.Info.Decision
@if (Document is not null)
{
    <div class="card mb-3">
        <div class="card-header">
            @if (Document.ParentId is not null)
            {
                <small>
                    <a href="document/@Document.ParentId.Value.ToString("D")">№@Document.ParentId.Value</a>
                </small>
            }
            <a href="document/@Document.Id.ToString("D")">№@Document.Id</a>
        </div>
        <div class="card-body">
            <h5 class="card-title px-1">@Document.Title</h5>
            <h6 class="card-subtitle text-body-secondary px-1 mb-2">@DocRules.DocNames[Document.Info?.GetType() ?? typeof(DocInfo)]</h6>
            <table class="table table-borderless table-sm">
                <tbody>
                <tr>
                    <th scope="row">Автор</th>
                    <td>
                        <a href="player/@Document.AuthorId">@AuthorNickname</a>
                    </td>
                </tr>
                <tr>
                    <th scope="row">Дата создания</th>
                    <td>@Document.CreationDate.ToString("g")</td>
                </tr>
                @if (Document.Info is Decision)
                {
                }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <small class="text-body-secondary">
                <i class="bi bi-eye"></i> @Document.Views
            </small>
        </div>
    </div>
}