@using AndNet.Manager.Shared.Models.Documentation.Info.Report
<div class="d-flex flex-column">
    <div class="mb-3">
        <label class="form-label">Тэг</label>
        <input type="text" class="form-control" @bind="BattleCombatant.Tag">
    </div>
    <div class="mb-3">
        <label class="form-label">Название</label>
        <input type="text" class="form-control" @bind="BattleCombatant.Name">
    </div>
    <div class="mb-3">
        <label class="form-label">Участники</label>
        <StringListEditor AddItem="x => {BattleCombatant.UnknownPlayers.Add(x); BattleCombatant.UnknownPlayers = BattleCombatant.UnknownPlayers.ToList();}"
                          RemoveItem="x => {BattleCombatant.UnknownPlayers.Remove(x); BattleCombatant.UnknownPlayers = BattleCombatant.UnknownPlayers.ToList();}"
                          GetItems="() => BattleCombatant.UnknownPlayers"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Техника</label>
        <StringListEditor AddItem="x => {BattleCombatant.Units.Add(x); BattleCombatant.Units = BattleCombatant.Units.ToList();}"
                          RemoveItem="x => {BattleCombatant.Units.Remove(x); BattleCombatant.Units = BattleCombatant.Units.ToList();}"
                          GetItems="() => BattleCombatant.Units"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Потери</label>
        <StringListEditor AddItem="x => {BattleCombatant.Casualties.Add(x); BattleCombatant.Casualties = BattleCombatant.Casualties.ToList();}"
                          RemoveItem="x => {BattleCombatant.Casualties.Remove(x); BattleCombatant.Casualties = BattleCombatant.Casualties.ToList();}"
                          GetItems="() => BattleCombatant.Casualties"/>
    </div>
</div>

@code
{
    [Parameter]
    public ReportInfoBattle.BattleCombatant BattleCombatant { get; set; } = new();
}